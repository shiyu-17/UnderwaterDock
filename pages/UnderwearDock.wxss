/* pages/UnderwaterDock.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.info {
  margin-bottom: 20px;
}

.info-text {
  font-size: 16px;
  font-weight: bold;
}

.buttons {
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 10px;
}

.primary {
  background-color: #007aff;
  color: #fff;
}

.default {
  background-color: #fff;
  color: #007aff;
  border: 1px solid #007aff;
}

.warn {
  background-color: #ff3b30;
  color: #fff;
}